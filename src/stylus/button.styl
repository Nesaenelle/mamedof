.btn 
    outline: none
    border: none
    padding: 5px
    cursor: pointer
    // text-transform: uppercase
    font-weight: 600
    transition: 0.1s
    position relative
    display inline-block
    &:active
        transform: translateY(1px)

    &--gold
        padding: 0
        font-size: 16px
        width: 270px
        max-width: 305px
        border: 1px solid transparent
        position relative

        button
            background: none
            border: none
            width: 100%
            height: 100%
            font-weight: 500
            padding: 8px 20px
            font-size: 20px
            color: $c-white
            background: $c-gold
            z-index: 10
            position relative
            display block
            text-align: center
            cursor: pointer
            &:before 
                content: ''
                position: absolute
                left: -6px
                top: 0px
                margin: auto
                bottom: 0
                width: 2px
                height: 100%
                border-left: 1px solid $c-gold
                pointer-events: none
                // z-index: -1
            &:after 
                content: ''
                position: absolute
                right: -7px
                top: 0px
                margin: auto
                bottom: 0
                width: 2px
                height: 100%
                border-right: 1px solid $c-gold
                pointer-events: none
                // z-index: -1
        &:before 
            content: ''
            position: absolute
            left: -12px
            top: -10px
            width: calc(100% + 23px)
            height: 20px
            border: 1px solid $c-gold
            z-index: 0
        &:after 
            content: ''
            position: absolute
            left: -12px
            bottom: -10px
            width: calc(100% + 23px)
            height: 20px
            border: 1px solid $c-gold
            z-index: 0

        &:hover 
            button 
                background: darken($c-gold, 10%)