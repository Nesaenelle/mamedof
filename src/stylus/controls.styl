.checkbox
	display: inline-flex
	align-items: center
	cursor: pointer
	input
		display: none
		&:checked ~ .checkbox--icon
			// background: red
			border: 1px solid $c-blue
			&:after 
				content: 'âœ”'
				height: 100%
				width: 100%
				display: block
				font-size: 12px
				text-indent: 3px
				line-height: 1.3em
				justify-content: center
				color: $c-blue
	&--icon
		width: 15px
		height: 15px
		// background: #ccc
		border: 1px solid #a9a9a9
		display: inline-flex
		align-items: center
	&--text
		font-size: 14px
		margin-left: 15px
		color: #424242
		font-family: 'Open Sans', sans-serif
		
	&--extra 
		margin-left: auto
		font-size: 16px
		color: #a1a1a1
		font-weight: 300
		font-family: 'Open Sans', sans-serif
.pagination
	display: flex
	&__item
		font-size: 14px
		margin: 0 2px
		background: $c-white
		border: 1px solid #e8e8e8
		padding: 12px 10px
		cursor: pointer
		width: 35px
		text-align: center
		&.active, &:hover:not(.dots):not(.next)
			background: $c-blue
			color: $c-white
			border: 1px solid $c-blue
		&.dots
			border: none
			width: 18px
			padding: 14px 0 8px
			
		&.next
			background: #e8e8e8
			color: $c-white
			transform: rotate(180deg)
			
.slider-range
	&__wrapper
		display: flex
		justify-content: space-between
		width: 100%
		margin-top: 23px
	&__from, &__to
		font-family: 'Open Sans', sans-serif
		color: #424242
		font-weight: 300
		input 
			width: 100%
			max-width: 110px
			margin-left: 8px
			font-size: 16px
			text-align: center
			padding: 4px
			color: #9b9b9b
			border: 1px solid #e8e8e8
			font-family: 'Open Sans', sans-serif
			
.ui-slider 
	margin-top: 20px
	&.ui-slider-horizontal 
		background: #f1f1f1
		height: 3px
		.ui-slider-range
			background: $c-blue
		.ui-slider-handle
			cursor: pointer
			background: $c-blue
			border-radius: 100%
			top: -5px
			width: 12px
			height: 12px
			// position: relative
			&:after
				content: ''
				width: 0 
				height: 0 
				border-left: 6px solid transparent
				border-right: 6px solid transparent
				border-top: 8px solid $c-blue
				position: absolute
				top: 8px
				
.input
	height: 50px
	width: 100%
	padding: 10px 25px 10px 15px
	border: 1px solid #e8e8e8
	outline: none
	font-size: 14px
	@media mqBigMobile
		height: 42px
		padding: 8px 22px 8px 13px
	
.textarea
	width: 100%
	padding: 17px 25px 10px 15px
	border: 1px solid #e8e8e8
	outline: none
	font-size: 14px
	resize: none
	@media mqBigMobile
		padding: 13px 22px 10px 13px
	
.input, .textarea
	&::-webkit-input-placeholder
		color: #d2d2d2
	&::-moz-placeholder
		color: #d2d2d2
	&:-ms-input-placeholder 
		color: #d2d2d2
	&:-moz-placeholder
		color: #d2d2d2

$formOffset = 20px
$formOffsetMobile = 15px

.form
	width: 100%
	display: flex
	align-items: flex-start
	padding-right: 20px
	flex-wrap: wrap
	
	@media mqMidMobile
		padding-right: 0
	
	&--title 
		font-size: 18px
		width: 100%
		text-transform: uppercase
		font-weight: 600
		color: #666666
		font-family: 'PT Sans', sans-serif
		@media mqBigMobile
			font-size: 16px
	label
		width: 100%
		margin-bottom: 40px
		font-size: 14px
		letter-spacing: 0.3px
	.input
		& + .btn
			@media mqMidMobile
				display: none
		& + .input, & + .dropdown, & + .form--col--2, & + .textarea
			margin-top: $formOffset
			@media mqBigMobile
				margin-top: $formOffsetMobile
	.textarea
		height: 153px
		& + .btn
			display: none
			@media mqMidMobile
				display: block
		
	.upload
		width: 100%
		display: flex
		justify-content: space-between
		& + .btn
			@media mqMidMobile
				display: none
		&--item
			width: calc(100%/4 - 10px)
			max-width: 81px
			position: relative
			overflow: hidden
			input
				width: 100%
				height: 100%
				opacity: 0
				position: absolute
				left: 0
				top: 0
				cursor: pointer
				&::-webkit-file-upload-button
					cursor: pointer
				
			img
				width: 100%
				display: block
	.dropdown
		height: 50px
		width: 100%
		@media mqBigMobile
			height: 42px
		& + .dropdown
			margin-top: $formOffset
			@media mqBigMobile
				margin-top: $formOffsetMobile
		& + .textarea
			margin-top: 26px
			
	.btn.btn--blue
		width: 100%
		margin-top: 14px
		@media mqBigMobile
			margin-top: 15px
			padding: 11px 20px
			font-size: 14px
	&--row
		display: flex
		justify-content: space-between
		align-items: flex-start
		@media mqMidMobile
			flex-wrap: wrap
	&--col
		display: flex
		flex-wrap: wrap
		align-items: flex-start
		width: calc(50% - 10px)
		@media mqBigMobile
			width: calc(50% - 6px)
		@media mqMidMobile
			width: 100%
			
		& + .form--col
			@media mqMidMobile
				margin-top: $formOffsetMobile
		&--2
			width: 100%
			display: flex
			justify-content: space-between
			align-items: flex-start
			& + label
				margin: 20px 0 10px 0
			& + .input, & + .dropdown
				margin-top: $formOffset
				@media mqBigMobile
					margin-top: $formOffsetMobile
			.input
				width: calc(50% - 10px)
				& + .dropdown 
					margin-top: 0
			.dropdown
				width: calc(50% - 10px)
				& + .dropdown
					margin-top: 0


.input-number
	display: inline-flex
	position: relative
	height: 40px
	input
		text-align: center
		width: 42px
		font-weight: 600
		border: 1px solid #e8e8e8
		color: #4f4f4f
		font-size: 14px
	&--up, &--down
		cursor: pointer
		width: 30px
		position: relative
		background: $c-blue
		color: $c-white
		font-size: 20px
		display: flex
		align-items: center
		justify-content: center
		&:hover
			background: darken($c-blue, 15%)
	&--up:after
		content: '+'
			
	&--down:after
		content: '-'
		

.dropdown
	display: inline-flex
	align-items: center
	position: relative
	width: 227px
	height: 40px
	&.active
		.dropdown__list
			opacity: 1
			visibility: visible
		.dropdown--value
			&:after
				top: 3px
				transform: rotate(225deg)
				-webkit-transform: rotate(225deg)
	&.dealer
		.dropdown--value
			text-transform: uppercase
			font-weight: 500
			background: #f14a3f!important
			color: #fff
			&:after 
				border: solid #fff
				border-width: 0 1px 1px 0
		.dropdown__dealer
			display: block
		.dropdown__list
			opacity: 0
			visibility: hidden
	&--value
		cursor: pointer
		color: #4f4f4f
		border: 1px solid #e8e8e8
		height: 100%
		width: 100%
		display: flex
		align-items: center
		padding: 0 25px 0 15px
		font-size: 14px
		position: relative
		&:after
			content: ''
			margin-right: 7px
			border: solid #000
			border-width: 0 1px 1px 0
			display: inline-block
			padding: 3px
			position: absolute
			right: 10px
			bottom: 0
			top: -3px
			margin: auto
			width: 0
			height: 0
			transform: rotate(45deg)
			-webkit-transform: rotate(45deg)
			transition: 0.2s
	&__list
		position: absolute
		left: 0
		top: calc(100% - 1px)
		width: 100%
		background: $c-white
		border: 1px solid #e8e8e8
		opacity: 0
		visibility: hidden
		transition: 0.2s
		z-index: 1
		box-shadow: 0 3px 10px -2px #ccc
		&--item
			width: 100%
			font-size: 12px
			padding: 10px 15px
			color: #4f4f4f
			cursor: pointer
			&:hover
				background: #e8e8e8
				
	&__dealer
		position: absolute
		left: 0
		top: calc(100% - 1px)
		width: 100%
		display: none
		background: #e8e8e8
		border: 1px solid #e8e8e8
		z-index: 1
		box-shadow: 0 3px 10px -2px #ccc
		&--item 
			display: flex
			align-items: center
			padding: 10px 20px
			svg
				min-width: 14px
				width: 14px
				height: 14px
				margin-right: 10px
				margin-top: -4px
				fill: #f14a3f