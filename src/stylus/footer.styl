footer 
	background: #1A1A1A
	padding: 40px 0 20px 0
	box-shadow: 0px 0px 25px rgba(0, 0, 0, 0.8)

	.language
		// width: 100px
		margin-left: 70px
		margin-top: 30px
		margin-right: 10px
		&__list
			top: auto
			bottom: 20px

	.logo
		margin-right: 25px

	.container
		// max-width: 100%
		display: flex
		color: #fff
		align-items: flex-start
		justify-content: space-between
		// padding: 0px 40px 0 14px
		@media mqSmallDesktop
			flex-wrap: wrap
			padding: 0px 40px 0 40px
		@media mqBigMobile
			padding: 0 20px

		.footer-menu 
			display flex
			justify-content: space-between
			width: 100%
			padding-top: 30px
			ul 
				margin-top: 0px
				// width: 100%
				display: inline-block
				vertical-align: top
				// display flex
				// &:nth-child(2)
				// 	margin-right: 30px

				li
					white-space: nowrap
					margin: 0 0 15px 0
					a
						font-weight: 300
						letter-spacing: 0.8px
						font-size: 13px
						&:hover
							text-decoration: underline

		& + .container
			margin-top: 14px
			// justify-content: space-between
		.email,.phone,.address
			display flex
			align-items: center
			flex-wrap: nowrap
			white-space nowrap
			font-size: 20px
			margin-right: 5px
			&:hover
				text-decoration: underline
			img 
				margin-right: 8px
		.email
			margin: 0 42px

		.socials
			justify-content: flex-end
			a
				&:hover
					img
						transform: scale(1.1)
				img 
					margin-left: 24px
					transition: 0.1s