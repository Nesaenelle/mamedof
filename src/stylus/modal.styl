.modal
	display: flex
	align-items: center
	justify-content: center
	position: fixed
	width: 100%
	height: 100%
	z-index: 102
	left: 0
	top: 0
	opacity: 0
	visibility: hidden
	transition: 0.2s
	&[data-modal-id="contact-us"]
		.modal--body
			max-width: 430px
			.btn 
				width: 100%
				margin-top: 40px
				@media mqBigMobile
					margin-top: 30px
					padding: 10px 8px
					font-size: 14px
			
	&.active 
		opacity: 1
		visibility: visible
	&--overlay
		z-index: 101
		position: fixed
		width: 100%
		height: 100%
		left: 0
		top: 0
		background: rgba(255,255,255, 0.9)
		opacity: 0
		visibility: hidden
		transition: 0.2s
		&.active 
			opacity: 1
			visibility: visible
	&--body 
		max-width: 680px
		width: 100%
		background: $c-white
		box-shadow: 0 0 20px -10px #666
		padding: 38px 30px 30px 34px
		position: relative
		min-width: 320px
		@media mqBigMobile
			padding: 20px
		@media mqSmallMobile
			padding: 10px
	&--close
		position: absolute
		right: 4px
		top: 9px
		width: 20px
		height: 20px
		cursor: pointer
		font-family: 'PT Sans', sans-serif
		font-size: 20px
		color: #666666
		&:hover
			transform: scale(1.1)
	&--title
		font-size: 26px
		font-weight: 500
		width: 100%
		color: #666666
		margin-bottom: 23px
		letter-spacing: 0.6px
		@media mqBigMobile
			font-size: 20px
		@media mqMidMobile
			font-size: 18px
	label
		font-size: 14px
		color: #555555
		line-height: 1.4em
		font-weight: 400
		letter-spacing: 0.2px
		@media mqMidMobile
			font-size: 12px
	&--link
		color: $c-blue
		font-size: 16px
		text-transform: uppercase
		text-decoration: underline
		cursor: pointer
		@media mqBigMobile
			font-size: 14px
		&-small
			font-size: 14px
			text-transform: none
	&--form
		display: flex
		flex-wrap: wrap
		width: 100%
		.modal--link
			margin: 14px 0 18px 0
		.modal--link
			width: 100%
			margin-left: auto
		input
			margin-top: 15px
			width: 100%
			padding: 19px 15px
			border: 1px solid #e8e8e8
			@media mqBigMobile
				margin-top: 8px
				padding: 14px 10px
			@media mqMidMobile
				padding: 10px 8px
			& + label
				margin-top: 27px
				@media mqBigMobile
					margin-top: 15px
		input[type="password"]
			& + label
				margin-top: 18px
				@media mqBigMobile
					margin-top: 12px
	&--left
		display: flex
		flex-wrap: wrap
		width: calc(65% - 47px)
		@media mqBigMobile
			width: calc(65% - 30px)
		@media mqSemiMobile
			width: calc(60% - 30px)
	&--right
		// display: none
		position: relative
		// flex-wrap: wrap
		width: calc(35% + 14px)
		@media mqBigMobile
			width: calc(35% + 10px)
		@media mqSemiMobile
			width: calc(40% + 10px)
		img
			cursor: pointer
			margin-top: 14px
			max-width: 170px
			width: 100%
			&:hover
				transform: scale(1.01)
			& + img
				margin-top: 11px
			
		.modal--link 
			right: 0px
			position: absolute
			
	.sign-in, .sign-up 
		display: flex
		flex-wrap: wrap
		justify-content: space-between
		

	&--socials
		height: 100%
		@media mqSemiMobile
			padding-bottom: 35px
			display: flex
			flex-wrap: wrap
			justify-content: flex-end
			align-items: flex-start
			align-content: flex-end
		
	.sign-in
		.modal--link
			bottom: 16px
			@media mqBigMobile
				bottom: 11px
			@media mqSemiMobile
				bottom: 2px
		.modal--form
			.btn 
				margin-right: 26px
				padding: 17px 10px
				
				@media mqBigMobile
					padding: 10px 8px
					font-size: 14px
				&--blue
					width: 166px
						
				&--transparent
					font-size: 16px
					width: auto
					border-color: transparent
					@media mqBigMobile
						font-size: 14px
					@media mqSemiMobile
						width: 166px
						padding: 0
						margin-top: 20px
						text-align: left
	.sign-up
		.modal--link
			bottom: 16px
			@media mqBigMobile
				bottom: 0px
				margin-bottom: 0
		.modal--left
			@media mqSmallMobile
				width: 60%
		.modal--right
			@media mqSmallMobile
				width: calc(40% - 15px)
		.modal--form
			.btn 
				margin-right: 10px
				padding: 17px 10px
				font-size: 16px
				font-weight: 500
				margin-top: 10px
				@media mqBigMobile
					padding: 10px 8px
					font-size: 14px
				& + label
					white-space: nowrap
					margin-top: 15px
			.modal--link
				margin-top: 4px
				white-space: nowrap