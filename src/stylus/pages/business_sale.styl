.business-sale-page
	.service-block
		.container
			display: flex
			justify-content: space-between
		&__left
			width: 57%
			background: $c-white
			.btn--gold
				margin-top: 44px
				margin-left: 16px
				width: 252px
		&__text
			letter-spacing: 0px
			line-height: 1.3em
			padding: 28px 37px 54px 22px
			box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.2)
		&__right
			width: calc(43% - 30px)
			margin-top: 25px
 			.banner
				height: 630px
				background: #ccc
				display: flex
				flex-wrap: wrap
				justify-content: center
				align-content: center
				padding: 20px 20px 65px 20px
				background-size: cover!important
				position relative
				&:after
					content: ''
					background: rgba(0,0,0,.45)
					position: absolute
					left: 0
					top: 0
					width: 100%
					height: 100%
				.btn--gold
					width: 250px
					margin-top: 48px
					z-index 1
				&--title
					font-family: IBM Plex Serif
					font-weight: 600;
					font-size: 40px
					line-height: 52px
					color: #FFFFFF
					position relative
					z-index: 1
					&:after 
						content: ''
						background: radial-gradient(29.14px at 56.81% 48.17%, #F9E7B8 0%, #BE9142 100%);
						height: 3px
						width: 100px
						// margin: 10px 0 20px 0
						left: 0px
						right: 0
						bottom: -21px
						margin: auto
						display: block
						position absolute
				&--text
					font-size: 20px
					text-align: center
					color: #FFFFFF
					margin-top: 40px
					position relative
					z-index: 1
	.stages	
		margin-top: 51px
		.title
			letter-spacing: 0px
		&__list
			margin: 38px 0 30px
			display flex
			justify-content: space-between
			flex-wrap: wrap
			&__item
				width: calc(100%/3 - 20px)
				box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.15)
				padding: 21px 10px 24px 10px
				margin-bottom: 25px
				display: flex
				&--number
					font-size: 100px
					line-height: 130px
					font-family: IBM Plex Serif
					font-weight: 600
					background: linear-gradient(90deg, #6a5538 -0.02%, #bc975e 21.32%, #d9be85 37.46%, #e7d491 55.17%, #c5a76c 67.3%, #bc975e 81.72%, #6a5538 99.94%)
					position relative
					width: 104px
					min-width: 104px
					height: 104px
					margin-right: 13px
					display: flex
					justify-content: center
					align-items: center
					&:before
						content: ''
						position: absolute
						left: 3px
						top: 3px
						width: calc(100% - 6px)
						height: calc(100% - 6px)
						background: #fff
					span 
						position: relative
						background: linear-gradient(90deg, #6A5538 -0.02%, #BC975E 21.32%, #D9BE85 37.46%, #E7D491 55.17%, #C5A76C 67.3%, #BC975E 81.72%, #6A5538 99.94%);
						-webkit-background-clip: text;
						-webkit-text-fill-color: transparent
						top: -8%
				&--title
					width: 100%
					font-weight: 600
					font-size: 20px
					line-height: 24px
					margin-top: 7px
				&--text
					margin-top: 10px
					font-size: 14px
					line-height: 17px