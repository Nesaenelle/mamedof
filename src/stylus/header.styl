header
	// height: calc(47px + 65px)
	// position fixed
	left: 0
	top: 0
	background: #1A1A1A
	width: 100%
	z-index: 100
	// transition: 0.5s
	// &.example-header
	// 	position: relative
	// &.hidden
	// 	top: - 200px
	@media mqBigMobile
		height: calc(40px + 55px)
	@media mqMidMobile
		height: calc(35px + 45px)

	nav
		@media mqBigMobile
			display: none
		ul
			display: flex
			li
				margin: 0 6px
				&.active, &:hover
					a:after 
						display block
				a
					display: block
					padding: 15px 20px 13px
					font-size: 14px
					color: #1f1f1f
					letter-spacing: 0.5px
					position: relative
					&:after 
						content: ''
						display none
						position absolute
						z-index: 2
						bottom: -1px
						height: 2px
						width: 100%
						left: 0
						background: #0786ff
					@media mqSmallDesktop
						padding: 13px 5px 15px
					@media mqMidTablet
						font-size: 12px
						padding: 14px 2px 16px

		.language
			margin-left: 60px
			position: relative
			width: 30px
			margin-top: -2px
			@media mqSmallDesktop
				margin-left: 25px
			@media mqBigMobile
				margin-left: 15px
			&.active
				.language__value
					&:after
						top: 3px
						transform: rotate(225deg)
						-webkit-transform: rotate(225deg)
				.language__list
					opacity: 1
					visibility: visible
			&__value
				text-align: right
				font-size: 14px
				cursor pointer
				color: #1f1f1f
				@media mqMidTablet
					font-size: 12px
				@media mqBigMobile
					font-size: 14px
				&:after
					content: ''
					margin-right: 7px
					border: solid #1f1f1f
					border-width: 0 1px 1px 0
					display: inline-block
					padding: 2px
					position: absolute
					right: -13px
					bottom: 0
					top: -3px
					margin: auto
					width: 0
					height: 0
					transform: rotate(45deg)
					-webkit-transform: rotate(45deg)
					transition: 0.2s
			&__list
				// width: 54px
				background: $c-white
				position: absolute
				opacity: 0
				visibility: hidden
				z-index: 6
				box-shadow: 0 3px 14px -8px #000
				left: -6px
				transition: 0.1s
				top: 20px
				@media mqMidTablet
					left: -2px
				@media mqBigMobile
					left: -6px
				&--item
					padding: 5px 10px
					font-size: 14px
					color: #1f1f1f
					cursor: pointer
					text-align: center
					@media mqMidTablet
						font-size: 12px
					@media mqBigMobile
						font-size: 14px
					&:hover
						background: #e8e8e8
						
