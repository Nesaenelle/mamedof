.btn 
    outline: none
    border: none
    padding: 5px
    cursor: pointer
    // text-transform: uppercase
    transition: 0.1s
    position relative
    display inline-block
    &:active
        transform: translateY(1px)

    &--gold
        padding: 0
        font-size: 16px
        width: 270px
        max-width: 305px
        border: 1px solid transparent
        position relative

        button
            transition: 0.1s
            background: none
            border: none
            width: 100%
            height: 100%
            font-weight: 400
            padding: 8px 20px
            font-size: 20px
            color: $c-white
            background: $c-gold
            z-index: 10
            position relative
            display block
            text-align: center
            cursor: pointer
            &:before 
                transition: 0.1s
                content: ''
                position: absolute
                left: -5px
                top: 0px
                margin: auto
                bottom: 0
                width: 2px
                height: 100%
                border-left: 1px solid $c-gold
                pointer-events: none
                // z-index: -1
            &:after 
                transition: 0.1s
                content: ''
                position: absolute
                right: -5px
                top: 0px
                margin: auto
                bottom: 0
                width: 2px
                height: 100%
                border-right: 1px solid $c-gold
                pointer-events: none
                // z-index: -1
        &:before 
            transition: 0.1s
            content: ''
            position: absolute
            left: -10px
            top: -9px
            width: calc(100% + 18px)
            height: 20px
            border: 1px solid $c-gold
            z-index: 0
        &:after 
            transition: 0.1s
            content: ''
            position: absolute
            left: -10px
            bottom: -9px
            width: calc(100% + 18px)
            height: 20px
            border: 1px solid $c-gold
            z-index: 0

        &:hover 
            &:before
                background: $c-gold-dark
                border-color: $c-gold-dark
                height: 100%
            &:after
                background: $c-gold-dark
                border-color: $c-gold-dark
                height: 100%
            button 
                background: $c-gold-dark
                &:before
                    left: -17px
                    border-color: $c-gold-dark
                &:after
                    right: -17px
                    border-color: $c-gold-dark